<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>

<HBox id="cardPane" fx:id="cardPane" minWidth="-Infinity" prefHeight="41.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1">
    <GridPane minWidth="-Infinity" prefHeight="34.0" HBox.hgrow="ALWAYS">
        <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10" prefWidth="150" />
        </columnConstraints>
        <VBox fx:id="propertiesContainer" alignment="CENTER_LEFT" minHeight="38.0" minWidth="-Infinity" prefHeight="38.0" prefWidth="380.0" style="-fx-border-width: 1; -fx-border-color: grey;" GridPane.columnIndex="0">
            <padding>
                <Insets bottom="5" left="15" right="5" top="5" />
            </padding>
            <HBox alignment="CENTER_LEFT" spacing="5">
                <Label fx:id="idLabel" minWidth="-Infinity" styleClass="cell_big_label" text="\$id" />
                <Label fx:id="nameLabel" minWidth="-Infinity" styleClass="cell_big_label" text="\$name" />
                <Label fx:id="budgetLabel" minWidth="-Infinity" styleClass="cell_big_label" text="\$budget" />
                <Label fx:id="dayLabel" minWidth="-Infinity" styleClass="cell_big_label" text="\$dayNumber" />
            </HBox>
         <GridPane.margin>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
         </GridPane.margin>
        </VBox>
      <rowConstraints>
         <RowConstraints />
      </rowConstraints>
    </GridPane>
</HBox>
